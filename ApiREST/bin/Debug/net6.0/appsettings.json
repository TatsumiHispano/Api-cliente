{
  "Logging": {
    "LogLevel": {
      //Establece el nivel de registro predeterminado en "Information", lo que significa que se registrarán mensajes informativos y de mayor severidad.
      "Default": "Information",
      // Configura el nivel de registro para los componentes de ASP.NET Core en "Warning", registrando solo advertencias y errores, reduciendo así la verbosidad de los logs para estos componentes
      "Microsoft.AspNetCore": "Warning"
    }
  },
  //indica que la aplicación aceptará solicitudes de cualquier host
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "tu_clave_secreta_super_secreta",
    // representa el emisor del token, es decir, la entidad que genera y firma el token.
    "Issuer": "EjemploIssuer",
    //indica la audiencia prevista del token, es decir, los destinatarios o sistemas que deben aceptar y procesar el token.
    "Audience": "EjemploAudience"
  }
}
